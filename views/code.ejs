<!-- Include header from partials -->
<%- include('partials/header.ejs', { name: name, title: title, description: description }) %>

<script>
	displayToast('<%= createStatus %>', '<%= createMessage %>');
</script>

<div class="float-left">
    <h1><%= title %></h1>
    <p><%= description %></p>
</div>
<div class="float-right">
    <!-- Copy code to clipboard -->
    <button class="button button-primary" onclick="copyContentToClipboard()">Copy code</button>
</div>
<div class="float-clear">
    <textarea class="code-container" id="code" disabled="disabled"><%= content %></textarea>
</div>
<a class="raw" href="/../../raw/<%= id %>">View raw</a>

<!-- Include footer -->
<%- include('partials/footer.ejs', { totalCount: totalCount, totalSize: totalSize }) %>
